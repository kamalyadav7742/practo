<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website</title>
    <link rel="stylesheet" href="/static/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/bootstrap/css/all.min.css">
    <link rel="stylesheet" href="/static/bootstrap/css/fontawesome.min.css">
    <style>
        #myDIV {
            width: 100%;
            text-align: center;
        }

        .hell {
            margin-bottom: 10px;
            margin-top: 10px;
        }
        input{
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    
    <div class="container-fluid">
        <div class="row bg-dark fixed-top">
            <span style="font-size: 12px;float: center;cursor: pointer;"><span onclick="myFunction()"> <button
                            type="button" class="btn btn-outline-danger btn-sm my-2 mx-center">Add Medicine </button>
        </div>
        <div id="myDIV">
            <form method="post" action="/add_medicine" enctype="multipart/form-data">
                <div class="row mt-5">
                    <div class="col-md-5 mx-auto px-4" style="border: 3px solid red;border-radius: 10px;">
						<div class="row hell mt-4">
                            <div class="col-md-4">
                                <label for="name">Category Name</label>
                            </div>
                            <div class="col-md-8">
                                <input class="w-100" type="text" id="name" name="name" maxlength="18" placeholder="Category name..">
                            </div>
                        </div>
                        <div class="row hell">
                            <div class="col-md-4">
                                <label for="image">Category Image</label>
                            </div>
                            <div class="col-md-8">
                               		<input class="w-100" type="file" name="image" id="image">
                            </div>
                        </div>
                        <div class="row hell">
                            <div class="col-md-4">
                                <label for="price">Type</label>
                            </div>
                            <div class="col-md-8">
                                <select class="form-select" id="cat" name="cat" size="1"
                                    aria-label="size 1 select example">
                                    <option selected>Our Pages</option>
                                    <option value="Health">Health</option>
                                    <option value="Category">Category</option>
                                </select>
                            </div>
                        </div><br>
                        <div class="row hell">
                            <!-- <a href="/add_medicine">  -->
								<button style="width: 180px;" type="submit" id="form_submit"
                                    class="btn btn-primary mx-auto">Add
                                    Category</button>
								<!-- </a> -->
                        </div>
                    </div>
            </form>
        </div>
    </div>
    </div>

    <div class="container-fluid mt-5">
		<div class="row py-3">
			<% if(result.length>0){%>
				<table >
					<thead>
						<tr class="text-dark ">
							<th>ID</th>
							<th>Name</th>
							<th>Image</th>
							<th>Category</th>
						</tr>
					</thead>
					<% for (var i=0; i<result.length; i++){%>
						<tbody>
							<tr style="border: 1px solid black;">
								<td>
									<%= result[i].id %>
								</td>
                                <td>
									<%= result[i].name %>
								</td>
								<td><a href="/static/upload/<%= result[i].image %>" target="_blank">
										<%= result[i].image %>
									</a></td>
								
								<td>
									<%= result[i].cat %>
								</td>
							
								<!-- <td class="text-center"><a href="/edit/<%= result[i].id %>"><input type="button"
											value="Edit" class="btn btn-primary"></a></td> -->
								<td class="text-center"><a href="/delete11/<%= result[i].id %>"><input type="button"
											value="Delete" class="btn btn-danger"></a></td>
							</tr>
							<%} %>
						</tbody>
				</table>
				<%} else{%> no record found
					<%} %>
		</div>
	</div>
  

    <script>
        function myFunction() {
            var x = document.getElementById("myDIV");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>