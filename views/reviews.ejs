<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Hardy Play Store</title>

  <link rel="stylesheet" href="../css/bootstrap.min.css">
  <link rel="stylesheet" href="../css/all.min.css">
  <link rel="stylesheet" href="../css/fontawesome.min.css">
  <link rel="stylesheet" href="../css/style1.css">

  <link rel="stylesheet" type="text/css" href="../css/game.css">
  <style>
    input::placeholder {
      color: blue;
      opacity: 1;
    }
  </style>
</head>

<body class="bt1">
  <%-include('./common/header.ejs') %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 re">
          <div class="row">
            <div class="col-md-3 cntt">
              <p id="p1" class="mt-1 text-white">GAMES REVIEWS</p>
            </div>
          </div>
        </div>
      </div>
    </div>


    <!-- reviews game -->
    <div class="container-fluid">
      <div class="row justify-content-evenly">
        <% if(result.length>0){ %>
          <% for (var i=0; i<result.length;i++) {%>
            <div class="col-md-6 mt-3">
              <img src="../<%= result[i].image %>" style="float: left; width: 100%; height: 100%; background-size: cover;" class="img-fluid" >
            </div>
            <div class="col-md-5 mt-3" style="float: right;">
              <p class="p10 mt-2"><%= result[i].date %> / in <span class="sp"><%= result[i].category %></span>
              </p>
              <p class="p11">RATING <span class="sp1"><%= result[i].rating %></span> / 10
              </p><br>
              <p class="p12 mt-1"><%= result[i].title %></p>
              <p class="p13"><%= result[i].description %></p>
            </div>
      <% } %>
        <%} else{%> no record found
          <%} %>
    </div>

    <div class="container-fluid">
      <div class="row mt-5 justify-content-center">
        <h2 id="p2">SUBSCRIBE TO OUR NEWSLETTER</h2>
        <div class="col-md-11 text-center">

          <form method="post" action="subscribe">
            <div class="wt bg-transparent text-center">
              <input type="email" name="subscribe" placeholder="ENTER YOUR E-MAIL" class="form-control bg-transparent text-white"
                id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            
            <div class="text-center mt-1 mb-5">
              <button type="submit" class="btn btn-outline-light">SUBSCRIBE <i
                class="fa-solid fa-arrow-right-long"></i></button>
              </div>
            </form>
        </div>
      </div>
    </div>
    
    <%- include('./common/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      rossorigin="anonymous"></script>
</body>
</html>