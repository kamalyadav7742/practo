    <style>
        @import url('https://fonts.googleapis.com/css?family=Varela+Round');

        html,
        body {
            overflow-x: hidden;
            height: 100%;
        }

        body {
            background: #fff;
            padding: 0;
            margin: 0;
            font-family: 'Varela Round', sans-serif;
        }

        .header {
            display: flex;
            margin: 0 auto;
            width: 100%;
            max-width: 100%;
            box-shadow: none;
            background-color: #1c1c46;
            position: fixed;
            height: 50px !important;
            overflow: hidden;
            z-index: 100000000;
            justify-content:first baseline;
        }
    </style>

<body>
    <div class="header ">
        <div style=" margin-top: 11px; margin-left: 22px; text-align: center;">
            <img src="/image/white_practo_logo.svg" alt="" width="60px" height="35px" style="border-radius: 15px 15px 0 15px;">
            <span style="width:100px ; padding-top: 17px; padding-left: 10px; color: #fff;">Super Admin</span>
        </div>
    </div>
    

    <div class="container-fluid  " style="margin-top: 60px;">
        <div class=" d-flex justify-content-center  ">
            <div class=" m-auto p-2" style="border:1px solid ; border-radius: 5px; background-color:#ecf2ff">
                <form action="/auth" method="post" class="mt-3 mb-3 p-3"
                    style="background-color:rgb(255, 255, 255) ;  border-radius: 5px;">

                    <h4 class="text-center mt-3" style="color:#2D392E; font-weight: bold;font-size: 16px;">USER LOGIN
                    </h4>
                    <!-- user input -->
                    <div class="form-outline mt-4">

                        <label class="form-label" style="font-size: 12px; font-weight: bold;" for="form2Example1">
                            User ID *
                        </label>
                        <input type="text" name="user_id" id="user_id" style="font-size:12px ;width: 100%;"
                            class="form-control" placeholder="User ID" required="">
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mt-2 pb-3">
                        <label class="form-label " style="font-size: 12px; font-weight: bold;" for="form2Example2">
                            Password
                        </label>
                        <input id="password" type="password" name="password" style="font-size:12px ;"
                            class="input form-control" placeholder="Password" required="">
                    </div>
                    <div class="row mb-3 ">
                        <div class="col-6">
                            <input class="form-check-input" type="checkbox" value="" id="eye" onclick="toggle()">

                            <label class="form-check-label" for="eye" style="font-size: 10px; "> <b>Show Password</b>
                            </label>

                        </div>

                        <div class="col-6 d-flex justify-content-end">
                            <!-- Checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked="">
                                <label class="form-check-label" for="form2Example31"
                                    style="font-weight: bold; font-size: 10px;"> Remember me </label>
                            </div>
                        </div>
                        <div class="col text-end mt-4">
                            <!-- Simple link -->
                            <a href="#!" style="font-size: 12px;"> Forgot password? </a>
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-content-center">
                        <!-- Submit button -->

                        <button type="submit" class="btn"
                            style=" color:white;text-align: center;width: 100px; background-color: #294785;">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="mt-5"></div>
    <div
        style="width:100% ; display: flex; justify-content:end;position: fixed; bottom: 0px; background-color:#1c1c46;height: 40px;">

        <p class="me-2 pt-1" style="color: white; font-size: 10px; margin-top: 8px;  justify-content: center;">
            <i class="fas fa-copyright"></i> 2022 Manthan IT Solutions , Inc.
            All rights Reserved.
        </p>

    </div>
    <script type="text/javascript" src="/static/CDN/xlxs.js"></script>
    <script>
        var state = false;
        function toggle() {
            if (state) {
                document.getElementById("password" ).
                    setAttribute("type", "password");
                document.getElementById("eye").style.color = '#7a797e';
                state = false;
            }
            else {
                document.getElementById("password").
                    setAttribute("type", "text");
                document.getElementById("eye").style.color = '#5887ef';
                state = true;
            }
        }
    </script>




</body>

