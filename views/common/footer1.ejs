    <script>
      $(document).ready(function () {
        // Toggle visibility of footer dropdown on click
        $('.footer-info-single h3').click(function () {
          if ($(window).width() <= 518) {
            $('.footer-info-single ul').toggle();
          } else {
            $('.footer-info-single ul').show();
          }
        });

        // Show footer dropdown on screens larger than 518px
        $(window).resize(function () {
          if ($(window).width() > 518) {
            $('.footer-info-single ul').show();
          } else {
            $('.footer-info-single ul').hide();
          }
        });
      });
    </script>

